<!-- Spring application context for Resource Registry -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
	<!--
		Resources Registrar. This bean holds instances of all resources, which
		compose the application. The resource instances are created by Spring as
		Spring beans.
	-->
	<bean class="org.apache.wink.spring.Registrar">
		<property name="classes">
			<set value-type="java.lang.Class">

				<value>
					org.apache.wink.server.internal.providers.entity.html.HtmlSyndEntryProvider
				</value>
				<value>
					org.apache.wink.server.internal.providers.entity.html.HtmlSyndFeedProvider
				</value>
				<value>
					org.apache.wink.example.qadefect.providers.DefectBeanProvider
				</value>
				<value>
					org.apache.wink.example.qadefect.providers.TestBeanProvider
				</value>
				<value>
					org.apache.wink.example.qadefect.providers.DefectBeanHtmlProvider
				</value>
				<value>
					org.apache.wink.example.qadefect.providers.SyndEntryPdfProvider
				</value>
			</set>
		</property>
		<property name="instances">
			<set>
				<ref local="resources.defects" />
				<ref local="resources.DefectTest" />
				<ref local="resources.tests" />
				<ref local="resources.categories" />
				<ref local="wink.HtmlServiceDocumentResource" />
			</set>
		</property>
	</bean>

	<!-- =======  Resources ======= -->
	<!--
		Defects Resource that returns a collection of defects
	-->
	<bean id="resources.defects"
		class="org.apache.wink.example.qadefect.resources.DefectsResource">
		<property name="dispatchedPath">
			<list>
				<util:constant
					static-field="org.apache.wink.example.qadefect.resources.DefectsResource.URL" />
			</list>
		</property>
		<property name="defectTestResource">
			<ref local="resources.DefectTest" />
		</property>
		<property name="categoriesResource">
			<ref local="resources.categories" />
		</property>
	</bean>

	<!--
		Tests Resource that returns the collection of all tests
	-->
	<bean id="resources.tests"
		class="org.apache.wink.example.qadefect.resources.TestsResource">
		<property name="dispatchedPath">
			<list>
				<util:constant
					static-field="org.apache.wink.example.qadefect.resources.TestsResource.URL" />
			</list>
		</property>
		<property name="workspaceTitle" value="QA Defects" />
		<property name="collectionTitle" value="Tests" />
	</bean>

	<bean id="resources.categories"
		class="org.apache.wink.example.qadefect.resources.CategoriesResource"
		scope="singleton">
		<property name="dispatchedPath">
			<list>
				<util:constant
					static-field="org.apache.wink.example.qadefect.resources.CategoriesResource.CategoryURL" />
			</list>
		</property>
	</bean>
	<!--
		Defect Tests Resource - Resource that returns tests under the specific
		defect. Pay attention that is reuses the same class as 'resources.tests',
		but the parent is different.
	-->
	<bean id="resources.DefectTest"
		class="org.apache.wink.example.qadefect.resources.TestsResource">
		<property name="dispatchedPath">
			<list>
				<util:constant
					static-field="org.apache.wink.example.qadefect.resources.DefectsResource.DEFECT_TESTS_URL" />
			</list>
		</property>
		<property name="parents">
			<list>
				<ref local="resources.defects" />
			</list>
		</property>
		<property name="testsResource">
			<ref local="resources.tests" />
		</property>
	</bean>


	<bean id="wink.HtmlServiceDocumentResource" class="org.apache.wink.server.internal.resources.HtmlServiceDocumentResource">
	</bean>

	<bean id="qaDefect.customPropertiesFactory"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>WEB-INF/configuration.properties
				</value>
			</list>
		</property>
	</bean>

	<bean id="wink.placeholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="order" value="1" />
		<property name="propertiesArray">
			<list>
				<props>
					<prop key="winkPropertiesFactory">qaDefect.customPropertiesFactory
					</prop>
				</props>
			</list>
		</property>
	</bean>
</beans>